@model IEnumerable<zengamemanifesto.Models.StartPagePostsSet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="pageheader">Welcome to Zengamemanifesto.com the home for integral personal development, dating and global change.</h2>

<div style="display: inline;" width: 70%">
 
@foreach (var item in Model) {
    <div>
        <div class="postheader divspace" >
            <b>@Html.DisplayFor(modelItem => item.Heading)</b>
        </div>
        </div>
    <div>
        <div width="110" class="divspace" >
            <img src="@Html.DisplayFor(modelItem => item.ImgLink)"  class="startpage-thumbnail"  />
        </div>
        <div class="divspace" >
            @Html.DisplayFor(modelItem => item.TextHtml)
        </div>
    </div>
}

</div>
