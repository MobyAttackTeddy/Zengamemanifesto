@model IEnumerable<zengamemanifesto.Models.BookSet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<style>

</style>
    
<div style="display: inline;">
    @foreach (var item in Model)
    {
        <div>
            <div class="toptable">
                <h3>@Html.DisplayFor(modelItem => item.BookTitle)</h3>
            </div>
        </div>
        <div class="buybox" >
            <div style="float: left;" class="divspace">
                <img src="@Html.DisplayFor(modelItem => item.ImgUrl)" style="width: 100px" />
            </div>

            <div style="float: left; width: 60%;" class="divspace">
                @Html.DisplayFor(modelItem => item.AboutText)
            </div>
            <div style="" class="divspace">
                @Html.DisplayFor(modelItem => item.Price)
            </div>
        </div>
        <div class="buybox" >
            <div style="float: left;" class="divspace">

                <a href="@Html.DisplayFor(modelItem => item.PreviewUrl)" class="myButton">Preview</a>
            </div>
            <div style="float: left;" class="divspace">

                <a href="@Html.DisplayFor(modelItem => item.BuyUrl)" class="myButton">Buy</a>
            </div>
        </div>

    }
</div>

