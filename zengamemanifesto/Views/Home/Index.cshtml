
@model PagedList.IPagedList<zengamemanifesto.Models.StartPagePostsSet>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="pageheader">Welcome to Zengamemanifesto.com the home for integral personal development, leadership, dating and global change. </h2>
<h4 class="pageheader"><i>Coaching on mindfulness, in leadership role's and mindset</i></h4>

<div style="display: inline;" width: 95%">
 
@foreach (var item in Model) {
    <div>
        <div class="postheader divspace" >
            <b>@Html.DisplayFor(modelItem => item.Heading)</b>
        </div>
        </div>
    <div style="display:inline-flex; width: 100%;">
        <div  class="divspace" >
            <img src="@Html.DisplayFor(modelItem => item.ImgLink)"  class="startpage-thumbnail"  />
        </div>
        <div class="divspace" style="font-size: medium; width:inherit;">
            @Html.Raw(item.TextHtml)
        </div>
    </div>
}

</div>
<div style="float: right;">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>